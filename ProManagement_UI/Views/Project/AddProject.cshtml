
@{
    ViewBag.Title = "AddProject";
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link href="~/Views/select2-4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
<script src="~/Views/select2-4.1.0-beta.1/dist/js/select2.min.js"></script>
<script>

    $(document).ready(function () {
        GetEmpId();
        GetEmpIn();
        GetTypeId();

    });
    $("#GetEmpIn").select2();

    function GetEmpId() {
        $.ajax({
            url: '/Project/GetProject_emp',
            type: 'get',
            datatype: 'json',
            success: function (data) {
                $("#GetEmpId").empty();
                var html = "<option value=0>-请选择-</option>";
                for (var i = 0; i < data.length; i++) {
                    html += "<option value=" + data[i]. + ">" + data[i].Name + "</option>";
                }
                $("#GetEmpId").append(html);
            }
        })
    }
    function GetEmpIn() {
        $.ajax({
            url: '/Project/GetProject_emp',
            type: 'get',
            datatype: 'json',
            success: function (data) {
                $("#GetEmpIn").empty();
                var html = "<option value=0>-请选择-</option>";
                for (var i = 0; i < data.length; i++) {
                    html += "<option value=" + data[i].Id + ">" + data[i].Name + "</option>";
                }
                $("#GetEmpIn").append(html);
            }
        })
    }

    function GetTypeId() {
        $.ajax({
            url: '/Project/GetProject_Type',
            type: 'get',
            datatype: 'json',
            success: function (data) {
                $("#GetTypeId").empty();
                var html = "<option value=0>-请选择-</option>";
                for (var i = 0; i < data.length; i++) {
                    html += "<option value=" + data[i].Id + ">" + data[i].Name + "</option>";
                }
                $("#GetTypeId").append(html);
            }

        })
    }

    function fileUpLoad() {
        var file = $("#file")[0].files[0];
        var fileReader = new FileReader()
        fileReader.onload = function () {
            $("#file").val(this.result);
        }
        fileReader.readAsDataURL(file);

        var fd = new FormData();
        fd.append("file", file);

